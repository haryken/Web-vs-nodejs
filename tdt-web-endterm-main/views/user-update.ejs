<body>

    <%- include("header"); -%>

<div class="section">
    <!-- container -->
    
    <div class="container">
        <!-- row -->
        <div class="section-title">
            <% if (user && user.role === "DEPARTMENT") { %>
                <h3 class="title">Đổi mật khẩu</h3>
            <% } %>
            <% if (user && user.role === "STUDENT") { %>
                <h3 class="title">Cập nhật thông tin</h3>
            <% } %>
        </div>
        <% if (user && user.role === "DEPARTMENT") { %>
            <div class="row">
                <form class="department-update-form" action="" method="post" enctype="multipart/form-data">
                    <div class="col-md-6">
                        <div class="billing-details">
                            <label>Mật khẩu cũ</label>
                            <div class="form-group">
                                <input class="input department-update-form-old-password" 
                                    type="password" name="oldPassword" placeholder="Mật khẩu cũ"  required>
                            </div>
                            <label>Mật khẩu mới</label>
                            <div class="form-group">
                                <input class="input department-update-form-new-password" 
                                    type="password" name="newPassword" placeholder="Mật khẩu mới"  required>
                            </div>
                            <label>Nhập lại mật khẩu mới</label>
                            <div class="form-group">
                                <input class="input department-update-form-re-password"
                                    type="password" name="rePassword" placeholder="Nhập lại mật khẩu mới"  required>
                            </div>
                            <div class="alert alert-danger department-update-form-error-message" 
                                role="alert" hidden>
                                
                            </div>
                            <div class="alert alert-success department-update-form-success-message" 
                                role="alert" hidden>
                                
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-12">
                            <button type="submit" name="submit" value="save" class="primary-btn order-submit">Thay đổi</button>
                            
                        </div>
                    </div>
                </form>
            </div>
        <% } %>

        <% if (user && user.role === "STUDENT") { %>
            <div class="row">
                <form class="student-update-form" action="" method="post" enctype="multipart/form-data">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Ảnh đại diện hiện tại</label>
                            <br/>
                            <img class="pl-4 student-update-form-picture" src="<%= user.image %>" alt="" />
                        </div>
                        <div class="billing-details">
                            <label>Tên hiển thị</label>
                            <div class="form-group">
                                <input class="input student-update-form-display-name" 
                                    type="text" name="displayName" placeholder="Tên hiển thị" 
                                    value="<%= user.displayName %>"
                                required>
                            </div>
                            <label>Lớp</label>
                            <div class="form-group">
                                <input class="input student-update-form-class-name" 
                                    type="text" name="className" placeholder="Tên lớp" 
                                    value="<%= user.className %>"
                                required>
                            </div>
                            <label>Khoa</label>
                            <div class="form-group">
                                <input class="input student-update-form-department-name" 
                                    type="text" name="departmentName" placeholder="Tên khoa"  
                                    value="<%= user.departmentName %>"
                                required>
                            </div>
                            <div class="form-group">
                                <label for="student-update-form-profile">Profile Picture</label>
                                <input type="file" class="form-control-file student-update-form-profile" 
                                    id="student-update-form-profile">
                            </div>
                            <div class="alert alert-danger student-update-form-error-message" 
                                role="alert" hidden>
                                
                            </div>
                            <div class="alert alert-success student-update-form-success-message" 
                                role="alert" hidden>
                                
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-12">
                            <button type="submit" name="submit" value="save" class="primary-btn order-submit">Thay đổi</button>
                            
                        </div>
                    </div>
                </form>
            </div>
        <% } %>
        <!-- /row -->
    </div>
    <!-- /container -->
    <br><a href="?controller=giangvien&action=cauhoi"><?= getMessage(); ?></a>
</div>
<!-- Delete Confirm Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 id="mdheader" class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">
                <p style="color: red;"  >Bạn có muốn xóa...này?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Không</button>
                <form action="?controller=admin&action=delete" method="post" style="display: inline;">
                    <input id="delete-id" type="hidden" name="id" value="??">
                    <button type="submit" class="btn btn-danger">Xóa</button>
                </form>

            </div>

        </div>
        <!-- /Modal content-->
    </div>
</div>
<!-- /Delete Confirm Modal -->

